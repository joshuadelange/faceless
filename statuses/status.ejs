<div class="status" <%= (el) -> el.data('status',status) %>>
	
	<div class="text">
		<p class="message"><%=status.message%></p>
		<p class="date muted" title="<%=status.updated_time%>"><%=new Date(status.updated_time).toRelativeTime()%></p>
	</div>

	<div class="friends">

		<%
		friends.data.push(status.friend) ;

		$.each(shuffleArray(friends.data), function(i, friend){ %>
			<a 
				<%= (el) -> el.data('friend',friend) %>
				class="friend" 
				title="<%=this.name%>" 
				rel="tooltip" 
				data-placement="bottom" 
				style="background-image: url(http://graph.facebook.com/<%=this.username%>/picture?width=90&height=90)" 
				href="javascript://">
			</a>
		<% }); %>

		<div class="clearfix"></div>

	</div>

	<div class="result">
		<h4 class="muted guessedCorrect">Your guess was <span class="text-success">correct!</span></h4>
		<h4 class="muted guessedWrong"><span class="text-error">Wrong!</span> It was <span class="correctFriend">your mom</span>!</h4>
	</div>
</div>